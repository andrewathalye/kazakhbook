<!--
      Rules for syllabification
      As with other features, we try each rule in order and back-track
      if a choice makes it impossible to determine the next syllable.
   -->
<syllables xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../shared/syllables.xsd">
   <!--
      Open syllables
   -->
   <syllable id="open_v">
      <require>manner/vocalic</require>
      <provide>syllable/open</provide>
   </syllable>
   <syllable id="open_cv">
      <forbid>manner/vocalic</forbid>
      <require>manner/vocalic</require>
      <provide>syllable/open</provide>
   </syllable>
   <!-- 
      Closed Syllables
   -->
   <!-- Must not occur before a vowel -->
   <syllable id="closed_vc">
      <require>manner/vocalic</require>
      <forbid>manner/vocalic</forbid>
      <final_context ref="preconsonantal"/>
      <provide>syllable/closed</provide>
   </syllable>
   <syllable id="closed_cvc">
      <forbid>manner/vocalic</forbid>
      <require>manner/vocalic</require>
      <forbid>manner/vocalic</forbid>
      <final_context ref="preconsonantal"/>
      <provide>syllable/closed</provide>
   </syllable>
   <syllable id="closed_cvnt">
      <forbid>manner/vocalic</forbid>
      <require>manner/vocalic</require>
      <require>@n</require>
      <require>@t</require>
      <provide>syllable/closed</provide>
   </syllable>
</syllables>
